@model IQueryable<Curso>

@{
    Layout = "_Secundario";
}

<h1>Lista Cursos</h1>

<form asp-controller="Linq" asp-action="ListaCursos" method="GET">
    <div class="row">
        <div class="col-md-4">
            <label>Filtro:</label>
            <input class="form-control" name="filtro" value="@ViewBag.filtro" />
        </div>
        <div class="col-md-4">
            <label>Fecha desde:</label>
            <input class="form-control" type="date" name="fechaDesde" value="@ViewBag.fechaDesde" />
        </div>
        <div class="col-md-4">
            <label>Fecha hasta:</label>
            <input class="form-control" type="date" name="fechaHasta" value="@ViewBag.fechaHasta" />
        </div>
    </div>
    </br>
    <button class="btn btn-primary" type="submit">Enviar</button>
</form>
<h5>@ViewBag.autor</h5>
<table class="table table-striped">
    @foreach (var cur in Model)
    {
        <tr>
            <td>@cur.Id</td>
            <td>@cur.Nombre</td>
            <td>@cur.Activo</td>
        </tr>

    }
</table>

